{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/1e5bea0c-ca15-4c82-8678-c962f7ec6ab6')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/1e5bea0c-ca15-4c82-8678-c962f7ec6ab6')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2023-12-01-preview",
            "properties": {
                "displayName": "_CSGP: NGINX - Sql injection patterns",
                "description": "Detects possible sql injection patterns",
                "severity": "Medium",
                "enabled": true,
                "query": "NGINXHTTPServer\n| where UrlOriginal contains \"1/*'*/\" or UrlOriginal contains \"1'||'asd'||'\" or UrlOriginal contains \"'1'='1\" or UrlOriginal contains \"1' or '1'='1\" or UrlOriginal contains \"1 or 1=1\" or UrlOriginal contains \"1=1\" or UrlOriginal contains \"1/*!1111'*/\" or UrlOriginal contains \"'or''='\"\n| extend UrlCustomEntity = UrlOriginal\n",
                "queryFrequency": "PT1H",
                "queryPeriod": "PT1H",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT1H",
                "suppressionEnabled": false,
                "startTimeUtc": null,
                "tactics": [
                    "InitialAccess"
                ],
                "techniques": [],
                "subTechniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": false,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5M",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": null,
                "customDetails": null,
                "entityMappings": [
                    {
                        "entityType": "URL",
                        "fieldMappings": [
                            {
                                "identifier": "Url",
                                "columnName": "UrlCustomEntity"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null,
                "templateVersion": null
            }
        }
    ]
}