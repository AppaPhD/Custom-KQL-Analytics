{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2deb027a-a6ae-4609-be24-faf1f1e4421c')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/2deb027a-a6ae-4609-be24-faf1f1e4421c')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2023-12-01-preview",
            "properties": {
                "displayName": "_CSGP: Automation Health - Playbooks On-Demand",
                "description": "This query checks for failed playbooks on-demand.\n\nHandling Guidance: https://costar-group-prod-dev.atlassian.net/wiki/spaces/SCSP/pages/390039244/General+Incident+Report+Handling+Guidance",
                "severity": "Low",
                "enabled": true,
                "query": "//Contributor: Anthony Edelstein\r\n//Source: Automation Health Dashboard Gallery Content Sentinel Workbook\r\n//Description: This rule checks for any failed playbooks on-demand that have not run.\r\n//Query:\r\nSentinelHealth\r\n| where SentinelResourceType == \"Playbook\"\r\n| where Status == \"Failure\"\r\n| extend Playbook = extract(@'playbook(.*)Playbook', 1, Description)\r\n| summarize FailedRuns=count(Status) by SentinelResourceName, SentinelResourceId, Description, OperationName, Reason, Playbook\r\n\r\n",
                "queryFrequency": "PT30M",
                "queryPeriod": "PT30M",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "startTimeUtc": null,
                "tactics": [
                    "Impact"
                ],
                "techniques": [
                    "T1565"
                ],
                "subTechniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": false,
                    "groupingConfiguration": {
                        "enabled": false,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5H",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "AlertPerResult"
                },
                "alertDetailsOverride": {
                    "alertDisplayNameFormat": "Automation Health: {{Playbook}} ",
                    "alertDescriptionFormat": "This automation rule {{Playbook}} has failed to run {{FailedRuns}} times. \n\n\n{{Description}}",
                    "alertDynamicProperties": [
                        {
                            "alertProperty": "AlertLink",
                            "value": "Playbook"
                        }
                    ]
                },
                "customDetails": null,
                "entityMappings": [
                    {
                        "entityType": "Host",
                        "fieldMappings": [
                            {
                                "identifier": "HostName",
                                "columnName": "Playbook"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null,
                "templateVersion": null
            }
        }
    ]
}