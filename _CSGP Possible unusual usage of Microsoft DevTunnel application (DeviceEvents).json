{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/80c03f78-5db1-423c-a6cc-5ca8436899c2')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/80c03f78-5db1-423c-a6cc-5ca8436899c2')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2023-12-01-preview",
            "properties": {
                "displayName": "_CSGP: Possible unusual usage of Microsoft DevTunnel application (DeviceEvents)",
                "description": "Detects on suspicious usage of Microsoft DevTunnels via DeviceEvents. This application can sometimes be used in the case of C2, much like VSCode tunneling.\n\nHandling Guidance: Reach out to the user to ask if this was done intentionally for a business purpose - this likely might be if from a Developer user. If not, work with Endpoint team to investigate unauthorized activity. Remediate and close any tunneling sessions on the device.",
                "severity": "Informational",
                "enabled": true,
                "query": "// Original author: Nixy Camacho\r\n// Detects when MS DevTunnel is invoked from a device. Can indicate C2 compromise/activity.\r\n// Handling Guidance: Reach out to the user to ask if this was done intentionally/authorized. If not, work with Endpoint team to investigate activity. Remediate and close any tunneling sessions on the device.\r\nDeviceEvents\r\n| where FileName == \"devtunnel.exe\"\r\n| project TimeGenerated, AccountName, ActionType, DeviceName, FileName, FolderPath, InitiatingProcessCommandLine, ProcessCommandLine ",
                "queryFrequency": "PT15M",
                "queryPeriod": "PT15M",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "startTimeUtc": null,
                "tactics": [
                    "CommandAndControl"
                ],
                "techniques": [],
                "subTechniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": true,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5H",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": {
                    "alertDynamicProperties": []
                },
                "customDetails": {},
                "entityMappings": [
                    {
                        "entityType": "Account",
                        "fieldMappings": [
                            {
                                "identifier": "FullName",
                                "columnName": "AccountName"
                            }
                        ]
                    },
                    {
                        "entityType": "Host",
                        "fieldMappings": [
                            {
                                "identifier": "HostName",
                                "columnName": "DeviceName"
                            }
                        ]
                    },
                    {
                        "entityType": "Process",
                        "fieldMappings": [
                            {
                                "identifier": "CommandLine",
                                "columnName": "ProcessCommandLine"
                            }
                        ]
                    },
                    {
                        "entityType": "File",
                        "fieldMappings": [
                            {
                                "identifier": "Name",
                                "columnName": "FileName"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null,
                "templateVersion": null
            }
        }
    ]
}